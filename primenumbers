// Finding if a number is prime or not by using function.
#include <iostream>
using namespace std;

void prime(int);

int main(int argc, const char * argv[]) {

    
   int num1=0;
    cout<<"please enter a number";
    cin>>num1;
    
    prime(num1);
    return 0;
}

void prime(int num1)
{
    int num2;
    for(num2=2;num2<=num1;num2++)
    {
        if(num1%num2==0)
        {
            break;
        }
    }
    if(num1==num2)
    {
        cout<<"it is prime";
    }
    else
    {
        cout<<"not prime";
    }
    
}
